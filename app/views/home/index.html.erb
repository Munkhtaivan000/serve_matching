<!-- app/views/home/index.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home Page</title>
  <link rel="stylesheet" href="<%= asset_path 'application.css' %>">
  <style>
    body {
      font-family: 'Helvetica Neue', Arial, sans-serif;
      background-color: #f4f4f9;
      margin: 0;
      padding: 0;
      color: #333;
    }
    .container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 20px;
      text-align: center;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
    }
    .nav {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
      background-color: #007BFF;
      padding: 10px;
      border-radius: 5px;
    }
    .nav a {
      margin: 0 15px;
      text-decoration: none;
      color: #fff;
      font-weight: bold;
    }
    .nav a:hover {
      text-decoration: underline;
    }
    .logo img {
      max-width: 200px;
      margin-bottom: 20px;
    }
    h1 {
      font-size: 2.5em;
      margin-bottom: 20px;
      color: #007BFF;
    }
    .job-resources {
      margin-top: 20px;
      text-align: left;
    }
    .job-resources h2 {
      margin-top: 0;
      color: #007BFF;
    }
    .job-resources ul {
      list-style-type: none;
      padding: 0;
    }
    .job-resources li {
      margin-bottom: 10px;
      font-size: 1.1em;
    }
    .job-resources a {
      text-decoration: none;
      color: #333;
    }
    .job-resources a:hover {
      color: #007BFF;
    }
  </style>
</head>
<body>
  <div class="container">
    <nav class="nav">
      <a href="<%= new_user_registration_path %>">Sign Up</a>
      <a href="<%= jobrecruitments_path %>">Job Recruitments</a>
      <a href="<%= jobapplications_path %>">Job Applications</a>
    </nav>

    <h1>Welcome to SERVE MATCHING</h1>

    <div class="logo">
     <image src="/assets/serve_matching image.png" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></image>
    </div>

    <div class="job-resources">
      <h2>Job Recruitments</h2>
      <ul>
        <li><a href="https://rubyonrails.org/" target="_blank">Resource 1</a></li>
        <li><a href="https://www.servematch.com/" target="_blank">Resource 2</a></li>
        <li><a href="https://www.example.com/resource3" target="_blank">Resource 3</a></li>
      </ul>
    </div>
  </div>
</body>
</html>
