<!-- app/views/jobrecruitments/new.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>New Work</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="container">
    <h2>JOB RECRUITMENTS</h2>

    <%= form_with model: @jobrecruitment, local: true, html: { multipart: true } do |f| %>
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description, class: "input" %>
      </div>

      <div class="field">
        <label for="status">Status</label>
        <div class="stars">
          <%= f.radio_button :status, 1, id: "star1" %>
          <label for="star1" style="color: yellow;">★</label>
          <%= f.radio_button :status, 2, id: "star2" %>
          <label for="star2" style="color: yellow;">★</label>
          <%= f.radio_button :status, 3, id: "star3" %>
          <label for="star3" style="color: yellow;">★</label>
          <%= f.radio_button :status, 4, id: "star4" %>
          <label for="star4" style="color: yellow;">★</label>
          <%= f.radio_button :status, 5, id: "star5" %>
          <label for="star5" style="color: yellow;">★</label>
        </div>
      </div>

      <div class="field">
        <%= f.label :location %><br />
        <%= f.text_field :location, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :datetime %><br />
        <%= f.text_field :datetime, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :endtime %><br />
        <%= f.text_field :endtime, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :image %><br />
        <%= f.file_field :image, class: "input" %>
      </div>

      <div class="actions">
        <%= f.submit "UPLOAD" %>
      </div>
      
    <% end %>
    
    
  </div>
</body>
</html>
